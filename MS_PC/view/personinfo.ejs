<!--内容块-->
<body class="bodyper">
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-push-3 upinfo">
            <form id="infolist">
                <div class="form-group">
                    <label for="name">用户名:</label>
                    <input type="text" class="form-control" id="name" name="username" placeholder="" value="<%=data.username%>">
                </div>
                <!--<div class="form-group">-->
                    <!--<label for="pwd">新密码:</label>-->
                    <!--<input type="text" class="form-control" id="pwd" name="passwd" placeholder="请输入新的密码">-->
                <!--</div>-->
                <div class="form-group">
                    <label for="name">年龄:</label>
                    <input type="text" class="form-control" id="name" name="age" placeholder="" value="<%=data.age%>">
                </div>
                <div class="form-group">
                    <label for="sex">请选择性别:</label>
                    <select class="form-control" id="sex" name="usersex">
                        <option <%=data.sex=='男'?'selected':''%>>男</option>
                        <option <%=data.sex=='女'?'selected':''%>>女</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">电话号码:</label>
                    <input type="text" class="form-control" id="name" name="usertel" placeholder="" value="<%=data.usertel%>">
                </div>
                <div class="form-group">
                    <label for="Email1">邮箱:</label>
                    <input type="email" class="form-control" id="Email1" name="email" placeholder="" value="<%=data.email%>">
                </div>
                <button id="btn-upuser" type="button" class="btn btn-success btn-block">确认修改</button>
            </form>
        </div>
    </div>
</div>
</body>
