<% include head.ejs%>
<body class="bodyper">
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-push-2" id="writearea">
            <form id="artlist">
                <div class="form-group">
                    <label for="title">标题：</label>
                    <input type="hidden" name="htid" value="<%=mytxt.tid%>">
                    <input type="text" name="utitle" class="form-control" id="title" placeholder="请输入标题" value="<%=mytxt.title%>">
                </div>
                <div class="form-group">
                    <label for="writer">作者：</label>
                    <input type="text" name="author" class="form-control" id="writer" placeholder="" value="<%=mytxt?mytxt.author:userse.username%>">
                </div>
                <div class="form-group">
                    <label for="content">内容：</label>
                    <textarea class="form-control" name="contents" rows="20" id="content"><%=mytxt.acontent%></textarea>
                </div>
                <div class="form-group">
                    <label for="keyword">关键字：</label>
                    <input type="text" name="keywords" class="form-control" id="keyword" placeholder="" value="<%=mytxt.akeywords%>">
                </div>
                <button id="publication" type="button" class="btn btn-primary btn-block"><%=mytxt?'确认修改':'现在发表'%></button>
            </form>
        </div>
    </div>
</div>
</body>
<% include footer.ejs%>