.article{
   margin: 10px 10px;
}
.title{
  display: block;
  text-align: center;
  font-size: 20px;
  margin-bottom: 10px;
  font-weight: 590;
  
}
.content{
  font-size: 15px;
  color: #333;
  padding: 0 5px;
  white-space: pre-wrap;
}

.comment{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 0 10px;
}
.mes{
  width: 30px;
  height: 30px;
  display: flex;
  flex-direction: column;
   justify-content:center;
   margin:0 3px; 
}
#cominput{
  display: flex;
  width: 480rpx;
  height: 26px;
  border: 1px #ccc solid;
  flex-direction: column;
   justify-content: center;
}
.btn_send{
  height: 30px;
  font-size: 13px;
  display: flex; 
  background-color: rgba(236,234,224,0.3);
   align-items: center;
}
.contents{
  display: block;
  color: #777;
  font-size:14px; 
   background-color: rgba(236,234,224,0.3);
  margin: 10px 10px;
  padding: 8px 10px;
}
.comment-item{
  display: flex;
  flex-direction: row;
  margin: 5px 0px;
}
.comment-item image{
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.comment-item .author{
  margin: 0px 3px;
  text-align: center;
  height: 30px;
  line-height: 30px;
}
.comment-item .comment-text{
  text-align: center;
  height: 30px;
  line-height: 30px;
}