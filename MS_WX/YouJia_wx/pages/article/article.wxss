
.nav{

  width: 100%;
  display: block;
}
.pdtitle{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
   margin: 10rpx 0;
}
.pdtitle .title1{
  font-size: 18px;
     display: block;
     color: #01B6AD;
}
.pdtitle .title2{
  font-size: 18px;
  color: #FF7260;
}
.ul{
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
}

.li{
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  padding-bottom: 4px;
  font-size: 15px;
  color: #0A4958;
}
.content{
  margin-top: 2px;
  border-top:1px solid #ccc;
  display: flex;
  flex-wrap: wrap;

  
}
.items{
  display: flex;
  align-items: flex-end;
  width: 50%;
  height: 270rpx;
  margin-top: 5rpx;
  box-sizing: border-box;
  border: 3px solid white;
  border-radius: 8px;
  background-size: 100%;
  background-repeat: no-repeat;
  
}
.artitle{
  font-size: 14px;
  display: flex;
  padding: 0 2px 2px 6px;
  color: rgba(255,255,255,0.9);
}
.img{
  display: flex;

  width: 100%;
  height: 100%;
  border-radius: 20%;

}
